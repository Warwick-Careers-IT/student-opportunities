


<section class="course-finder">
  <div class="image-container">
    <figure id="image1" class="flush-top full-width"><img src="//warwick.ac.uk/study/postgraduate/hp-contents/pg_1170x375_banner_homepage_3.jpg" border="0" alt="Postgraduate study homepage banner - abstract vector triangles in red and purple">




</figure>
  </div>

  <div class="form">
    <form>
      <h2><label for="course-search">All Warwick opportunities in one place</label> </h2>
      <div class="input-group input-group-lg">
        {% verbatim %}
        <div id="app">
          <autocomplete :items="[ 'Sprint Programme', 'Study Happy', 'URSS', 'Warwick in Africa', 'Warwick incubator', 'Work experience', 'Job vacancies', 'Enterprise fund', 'Video editing', 'career guidance', 'Q-step' , 'interview practice' , 'summer internships', 'student societies' , 'volunteering' , 'job search help', 'sports', 'innovation and entrepreneurship programme' , 'mentoring', 'Research student skills programme', 'study abroad' , 'warwick portfolio award', 'warwick inspire', 'presentation skills', 'Numerical skills development' , 'academic writing programme', 'language learning' , 'french' , 'german' , 'Excel' , 'internships', 'programming', 'employer events' , 'careers fairs', 'inspiring women', 'How to find a job in the Games Industry' , 'Delivering effective presentations' , 'Intercultural Awareness Workshop' , 'Confidence and initiative' , 'Pitching your ideas', 'design thinking']" />
        </div>
        <script type="text/x-template" id="autocomplete">
          <div class="autocomplete">
            <input type="text" @input="onChange" v-model="search" @keyup.down="onArrowDown" @keyup.up="onArrowUp" @keyup.enter="onEnter" />
            <ul id="autocomplete-results" v-show="isOpen" class="autocomplete-results">
              <li class="loading" v-if="isLoading">
                Loading results...
              </li>
              <li v-else v-for="(result, i) in results" :key="i" @click="setResult(result)" class="autocomplete-result" :class="{ 'is-active': i === arrowCounter }">
                {{ result }}
              </li>
            </ul>

          </div>
        </script>
        {% endverbatim %}
         <span class="input-group-btn"> <button class="btn btn-brand" type="submit">Go</button> </span>

        </div>
    </form>

  </div>

</section>


