    width: 100%;
    height: 46px;
  }

  ul.autocomplete-results {
  padding: 0;
  margin: 0;
  border: 1px solid #eeeeee;
  background-color: #4aae9b;
  height: 200px;
  overflow: auto;
  width: 100%;
  }

  li.autocomplete-result {
    list-style: none;
    text-align: left;
    padding: 5px 5px;
    cursor: pointer;
    background-color: #4aae9b;
    color: white;
    height: 40px;
    margin: 0px;
  }

  .autocomplete-result.is-active,
  .autocomplete-result:hover {
  color: white;
  }

  .course-finder h2 {
      font-size: 42px;
